class Solution {
    public int numberOfSubstrings(String s) {
        int[] count= new int[3];
        int j=0;
        int ans=0;
        for(int i=0;i<s.length();i++){
            count[s.charAt(i)-'a']++;
            if(count[0]>0 && count[1]>0 && count[2]>0){
                count[s.charAt(j)-'a']--;
                ans+=s.length()-i;
                j++;
            }

        }
        return ans;
    }
}
